{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules","tests", "**/*.test.ts", "dist"]
}
